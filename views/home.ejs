						</form>-->
					</div> <!-- .main-navigation -->

					<div class="mobile-navigation"></div>
				</div>
			</header>
			<main class="main-content">



				<div class="container">
					<div class="page">


						<div class="movie-list">

							<%
						 for(var i=0; i<moviesList.length; i++) {
						 %>
							<div class="movie">	<figure class="movie-poster"><img class="poster" src="<%=moviesList[i].poster%>" alt="#"></figure>
							<div class="movie-title"><%=moviesList[i].name%> <a href="./reviewadd?id=<%=moviesList[i].id%>">
							<i class="fa fa-heart" aria-hidden="true"></i></a> <a href="/reviewdelete?id=<%=favmoviesList[i].id%>">Del</a></div>
							<div class="movie-shopping"> <%=moviesList[i].price%> <i class="fa fa-shopping-cart" aria-hidden="true"></i></div>
							<p id="<%=moviesList[i].id %>"><%=moviesList[i].synopsis.slice(0, 300)%> <button type="submit" id="btn-valide<%=i%>" class="btn btn-warning">Read more</button></p>
							</div>
							</div>

							<%
							}
							%>

						</div> <!-- .movie-list -->

					</div>
				</div> <!-- .container -->
			</main>

		</div>







		<!-- Default snippet for navigation -->



	</body>

<script>

var list = $(".movie")
list.each(function(index){

		 $("#btn-valide"+index).click(function () {
		$("#movieList[index].id").val(movieList[index].synopsis)
	})
	})

